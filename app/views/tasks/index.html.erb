<h1>Task.index</h1>

<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= @task.errors.count %>件のエラーがあります。</h2>
    <ul>

    <% @task.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<% @task.each do |task| %>
  <%= task.title %>
  <%= task.content %>
<% end %>

<%= link_to '登録する', new_task_path %>
